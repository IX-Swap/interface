{
    "env": {
        "jest": true,
        "browser": true,
        "es6": true
    },
    "plugins": ["prettierx"],
    "extends": [
        "standard-with-typescript",
        "react-app",
        "plugin:prettierx/standardx",
        "plugin:prettierx/@typescript-eslint",
        "plugin:prettierx/react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "react-hooks/exhaustive-deps": "error",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    }
}